{
  "$id": "https:/jenkins-x.io/tests/descriptionAndTitle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Jenkins App values.yaml",
  "type": "object",
  "properties": {
    "dex": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string", "format": "hostname"
        },
        "enabledConnector": {
          "type": "string",
          "title": "How do you want to authenticate?",
          "enum": [
            "Google",
            "GitHub"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "enabledConnector": {
                "type": "string",
                "const": "GitHub"
              }
            }
          },
          "then": {
            "properties": {
              "connectors": {
                "type": "object",
                "properties": {
                  "github": {
                    "type": "object",
                    "properties": {
                      "config": {
                        "type": "object",
                        "properties": {
                          "clientID": {
                            "type": "string",
                            "format": "token-passthrough"
                          },
                          "clientSecret": {
                            "type": "string",
                            "format": "token-passthrough"
                          },
                          "type": {
                            "type": "string",
                            "const": "github"
                          },
                          "name": {
                            "type": "string",
                            "const": "GitHub"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "enabledConnector": {
                "type": "string",
                "const": "Google"
              }
            }
          },
          "then": {
            "properties": {
              "connectors": {
                "type": "object",
                "properties": {
                  "github": {
                    "type": "object",
                    "properties": {
                      "config": {
                        "type": "object",
                        "properties": {
                          "clientID": {
                            "type": "string",
                            "format": "token-passthrough"
                          },
                          "clientSecret": {
                            "type": "string",
                            "format": "token-passthrough"
                          },
                          "type": {
                            "type": "string",
                            "const": "oidc"
                          },
                          "id": {
                            "type": "string",
                            "const": "google"
                          },
                          "name": {
                            "type": "string",
                            "const": "Google"
                          },
                          "issuer": {
                            "type": "string",
                            "const": "https://accounts.google.com"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}
